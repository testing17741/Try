<body>
    <header>
        <h1>Islamic Birthday Wishes</h1>
        <p>Enter your name and birthday to get personalized wishes</p>
    </header>

    <div class="container">
        <section class="form-section">
            <h2>Enter Your Information</h2>
            <form id="birthdayForm">
                <label for="name">Your Name:</label>
                <input type="text" id="name" placeholder="Enter your name" required>
                
                <label for="dob">Date of Birth:</label>
                <input type="date" id="dob" required>

                <button type="submit">Submit</button>
            </form>
        </section>

        <section class="countdown-section">
            <h2>Next Birthday Countdown</h2>
            <div id="countdown">00:00:00</div>
        </section>

        <section class="duas-section">
            <h2>Special Duas for You</h2>
            <p id="dua"></p>
        </section>

        <section class="support-section">
            <h2>Share Your Wishes</h2>
            <p>Share your birthday wishes with others: <a id="shareLink" href="#">Click to share</a></p>
        </section>

        <footer>
            <p>Copyright Â© CHAUDHARY TECH 2024</p>
        </footer>
    </div>

    <script>
        // Handle form submission
        document.getElementById("birthdayForm").addEventListener("submit", function(e) {
            e.preventDefault();

            const name = document.getElementById("name").value;
            const dob = document.getElementById("dob").value;

            // Save name and dob in localStorage
            localStorage.setItem("name", name);
            localStorage.setItem("dob", dob);

            // Generate Duas with Name
            const duas = [
                `May Allah bless you, ${name}, with a long, prosperous, and healthy life.`,
                `May this special day bring you, ${name}, success in this life and the hereafter.`,
                `May Allah grant you, ${name}, wisdom and happiness.`,
                `May Allah forgive your sins, ${name}, and grant you peace of mind.`,
                `May Allah make all your dreams and wishes come true, ${name}.`,
                `May you always be surrounded by love and blessings, ${name}.`,
                `May you find peace and joy in every step you take, ${name}.`,
                `May Allah bless your family and loved ones, ${name}.`,
                `May you be granted success in every endeavor, ${name}.`,
                `May Allah guide you, ${name}, to the right path.`,
                `Ameen. May all your duas be accepted, ${name}.`
            ];

            document.getElementById("dua").innerText = duas[Math.floor(Math.random() * duas.length)];

            // Countdown Timer
            setInterval(function() {
                const birthday = new Date(dob);
                birthday.setFullYear(new Date().getFullYear());
                if (new Date() > birthday) birthday.setFullYear(new Date().getFullYear() + 1);

                const diff = birthday - new Date();
                const days = Math.floor(diff / (1000 * 60 * 60 * 24));
                const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((diff % (1000 * 60)) / 1000);

                document.getElementById("countdown").innerText = `${days}d ${hours}h ${minutes}m ${seconds}s`;
            }, 1000);

            // Generate shareable link with the stored data
            const shareLink = window.location.href.split('?')[0] + `?name=${encodeURIComponent(name)}&dob=${encodeURIComponent(dob)}`;
            document.getElementById("shareLink").setAttribute('href', shareLink);
            document.getElementById("shareLink").innerText = 'Click to share your birthday wishes!';
        });

        // Check if there's data in the URL parameters
        const urlParams = new URLSearchParams(window.location.search);
        const nameFromUrl = urlParams.get('name');
        const dobFromUrl = urlParams.get('dob');

        if (nameFromUrl && dobFromUrl) {
            localStorage.setItem("name", nameFromUrl);
            localStorage.setItem("dob", dobFromUrl);

            // Generate Duas with Name
            const duas = [
                `May Allah bless you, ${nameFromUrl}, with a long, prosperous, and healthy life.`,
                `May this special day bring you, ${nameFromUrl}, success in this life and the hereafter.`,
                `May Allah grant you, ${nameFromUrl}, wisdom and happiness.`,
                `May Allah forgive your sins, ${nameFromUrl}, and grant you peace of mind.`,
                `May Allah make all your dreams and wishes come true, ${nameFromUrl}.`,
                `May you always be surrounded by love and blessings, ${nameFromUrl}.`,
                `May you find peace and joy in every step you take, ${nameFromUrl}.`,
                `May Allah bless your family and loved ones, ${nameFromUrl}.`,
                `May you be granted success in every endeavor, ${nameFromUrl}.`,
                `May Allah guide you, ${nameFromUrl}, to the right path.`,
                `Ameen. May all your duas be accepted, ${nameFromUrl}.`
            ];

            document.getElementById("dua").innerText = duas[Math.floor(Math.random() * duas.length)];
        }
    </script>
</body>
